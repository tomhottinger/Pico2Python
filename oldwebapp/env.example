# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
PYTHONUNBUFFERED=1

# Paths (relative to container)
CONFIG_FILE=/app/volumes/config/config.yml
CONTENT_DIR=/app/volumes/content
THEMES_DIR=/app/volumes/themes

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=60
GUNICORN_BIND=0.0.0.0:5000

# Optional: Custom settings
# TIMEZONE=Europe/Zurich
# LOCALE=de_CH

